@{
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

@section Styles {
    <link href="~/css/admin/categoryForm.css" rel="stylesheet" />
}

<div class="form-wrapper">
    <div class="form-card">
        <h2 class="form-title">➕ Thêm danh mục mới</h2>

        <form asp-action="Create" method="post" class="category-form">
            <div class="form-group">
                <label for="Name">Tên danh mục</label>
                <input type="text" id="Name" name="Name" required placeholder="Nhập tên danh mục..." />
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-submit">Thêm</button>
                <a href="/Admin/Category/Index" class="btn-cancel">Hủy</a>
            </div>
        </form>
    </div>
</div>
