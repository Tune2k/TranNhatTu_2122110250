@model TranNhatTu_2122110250.Model.User

@{
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

@section Styles {
    <link href="~/css/admin/userForm.css" rel="stylesheet" />
}

<div class="form-wrapper">
    <div class="form-card">
        <h2 class="form-title text-danger">❌ Xóa người dùng</h2>

        <form asp-action="Delete" method="post" class="user-form">
    @Html.AntiForgeryToken() <!-- ✅ Rất quan trọng để không lỗi 400 -->

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <p>Bạn có chắc chắn muốn xóa người dùng này?</p>
        <ul>
            <li><strong>Tên:</strong> @Model.Username</li>
            <li><strong>Email:</strong> @Model.Email</li>
        </ul>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-danger">❌ Xóa</button>
        <a href="/Admin/User/Index" class="btn btn-secondary">⬅ Quay lại</a>
    </div>
</form>

    </div>
</div>
