    <div class="product-detail-page">
        <!-- Hình ảnh sản phẩm -->
        <div class="product-image">
           
                <img class="img-fluid" src="~/images/products/@Model.Image" alt="@Model.Name" />

            <div class="product-thumbnails">
                <ul>
                    <li>
                        <img class="thumbnail" src="~/images/products/@Model.Image" alt="Image thumbnail" />
                    </li>
                </ul>
            </div>
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="product-info">
            <h1 class="my-4">@Model.Name - @Model.Price.ToString("#,##0") VND</h1>
            <h4>
                @if (Model.Stock > 0)
                {
                    <span class="text-success">Còn @Model.Stock sản phẩm</span>
                }
                else
                {
                    <span class="text-danger">Hết hàng</span>
                }
            </h4>

            <h3 class="my-3">Chi tiết sản phẩm</h3>
            <ul>
                @foreach (var detail in Model.Description.Split('\n'))
                {
                    <li>@detail</li>
                }
            </ul>

