@model IEnumerable<TranNhatTu_2122110250.Model.Order>

<h1>Danh sách Đơn hàng</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ngày đặt</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Tổng giá</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td>@order.CustomerName</td>
                    <td>@order.CustomerEmail</td>
                    <td>@order.TotalPrice.ToString("#,##0") VND</td>
                    <td>
                        <!-- Thêm nút Xem chi tiết -->
                        <a href="@Url.Action("Details", "UserOrder", new { id = order.Id })" class="btn btn-info">
                            Xem chi tiết
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Bạn chưa có đơn hàng nào.</p>
}
